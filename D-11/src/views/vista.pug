html 
    head    
        title="Plantilla Pug JS"
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    body
        br
        h1.text-center.text-primary Vista de Productos
        br
        if productos.length 
            table.table
                thead.table-primary
                    th(scope='col') id
                    th(scope='col') Nombre
                    th(scope='col') Precio
                    th(scope='col') Foto
                
            
                tbody.table-success
                    each nombre in productos
                        tr 
                            td #{nombre.id}
                            td #{nombre.title}
                            td #{nombre.price}
                            td         
                                img(src=nombre.thumbnail width="50" height="50")
        else             
            h2.text-center.alert-warning No Se Encontraron Productos        


     
 



